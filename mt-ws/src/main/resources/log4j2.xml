<?xml version="1.0" encoding="UTF-8"?>
<Configuration>
   <Appenders>
      <Console name="Console" target="SYSTEM_OUT">
	      <!-- %d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n -->
         <PatternLayout
		         pattern="%d{yyyy-MM-dd HH:mm:ss.SSS} [MT] %p %c{1}.%M(%L) | %m%n"
		         />

      </Console>
	   <!-- Async Loggers will auto-flush in batches, so switch off immediateFlush. -->
	   <RandomAccessFile name="RandomAccessFile" fileName="logs/mt-ws-async.log"
	                     immediateFlush="false" append="false">
         <PatternLayout>
            <Pattern>%d %p %c{1.} [%t] %m %ex%n</Pattern>
         </PatternLayout>
      </RandomAccessFile>
      <RollingFile name="RollingFile" fileName="logs/mt-ws.log"
                   filePattern="logs/$${date:yyyy-MM}/app-%d{MM-dd-yyyy}-%i.log.gz">
         <PatternLayout>
            <Pattern>%d %p %c{1.} [%t] %m%n</Pattern>
         </PatternLayout>
         <Policies>
            <TimeBasedTriggeringPolicy />
            <SizeBasedTriggeringPolicy size="250 MB" />
         </Policies>
         <DefaultRolloverStrategy max="20" />
      </RollingFile>
   </Appenders>
   <Loggers>
      <!-- pattern layout actually uses location, so we need to include it -->
	   <AsyncLogger name="com.loycl.mt.async" level="info" includeLocation="true">
         <AppenderRef ref="RandomAccessFile" />
         <AppenderRef ref="RollingFile" />
      </AsyncLogger>
	   <!--  <Root level="info" includeLocation="false">
			<AppenderRef ref="RandomAccessFile"/>
			</Root>-->
	   <Logger name="com.loycl.mt" level="all">
         <AppenderRef ref="Console" />
      </Logger>
   </Loggers>
</Configuration>